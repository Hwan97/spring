<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>

    <formset>
        <form name="boardVO">
        	<field property="name" depends="required">
        		<arg0 key="title.board.name" />
			</field>
			<field property="description" depends="required">
                <arg0 key="title.board.description" />
            </field>
            <field property="hitcounter" depends="required">
                <arg0 key="title.board.hitcounter" />
            </field>
            <field property="datetime" depends="required">
                <arg0 key="title.board.datetime" />
            </field>
        	<!--
            <field property="regUser" depends="required">
        		<arg0 key="title.board.regUser" />
			</field>
            -->
        </form>
    </formset>

</form-validation>